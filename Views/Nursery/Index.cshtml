
@model IEnumerable<NurseryExample3.Models.NurseryProduct >


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<br /><br />

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h2>Product Details</h2>

            <table class="table table-striped table-hover">
                <tr>
                    <th>Product Id</th>
                    <th>Product Name</th>
                </tr>
                @foreach (var prd in Model)
                {
                    <tr>
                        <td>@prd.Id</td>
                        @*<td><a href="/Products/Details/@prd.Id">@prd.ProductName</a></td>*@
                        <td>@Html.ActionLink(prd.Name, "Details", "Nursery", new { id = prd.Id }, null) </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

